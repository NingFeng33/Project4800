<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Booking Calendar</title>
    <!-- FullCalendar CSS -->
    <link href='https://cdn.jsdelivr.net/npm/fullcalendar@latest/main.min.css' rel='stylesheet' />
    <style>
        .container {
            display: flex;
        }

        .sidebar {
            width: 300px;
            padding: 20px;
            background-color: #f4f4f4;
        }

        #calendar {
            flex-grow: 1;
            max-width: 800px;
            margin-left: 20px;
        }
    </style>
</head>

<body>
    <div class="container">
        <!-- Sidebar for filters -->
        <div class="sidebar">
            <h3>Filter by Program</h3>
            <select id="programFilter">
                <option value="">Select Program</option>
                <% programs.forEach(function(program) { %>
                    <option value="<%= program.program_id %>"><%= program.program_name %></option>
                <% }) %>
            </select>

            <h3>Filter by Course</h3>
            <select id="courseFilter">
                <option value="">Select Course</option>
                <% courses.forEach(function(course) { %>
                    <option value="<%= course.course_id %>"><%= course.course_name %></option>
                <% }) %>
            </select>

            <button id="applyFilter">Apply Filter</button>
        </div>

        <!-- Calendar container -->
        <div id='calendar'></div>
    </div>

    <!-- FullCalendar JS -->
    <script src='https://cdn.jsdelivr.net/npm/fullcalendar@latest/main.min.js'></script>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const programFilter = document.getElementById('programFilter');
            const courseFilter = document.getElementById('courseFilter');
            const applyFilterButton = document.getElementById('applyFilter');
            const calendarEl = document.getElementById('calendar');
    
            // Initialize FullCalendar
            var calendar = new FullCalendar.Calendar(calendarEl, {
                initialView: 'dayGridMonth',
                headerToolbar: {
                    left: 'prev,next today',
                    center: 'title',
                    right: 'dayGridMonth,timeGridWeek,timeGridDay'
                },
                events: [] // Events will be added later based on the filters
            });
            calendar.render();
    
            // Fetch courses based on the selected program
            programFilter.addEventListener('change', function() {
                const selectedProgram = programFilter.value;
    
                // Clear course filter options
                courseFilter.innerHTML = '<option value="">Select Course</option>';
    
                if (selectedProgram) {
                    // Fetch courses for the selected program from the server
                    fetch(`/api/courses/${selectedProgram}`)
                        .then(response => response.json())
                        .then(courses => {
                            // Populate course filter with courses
                            courses.forEach(function(course) {
                                const option = document.createElement('option');
                                option.value = course.course_id; // Use course_id
                                option.textContent = course.course_name; // Use course_name
                                courseFilter.appendChild(option);
                            });
                        })
                        .catch(error => {
                            console.error('Failed to fetch courses:', error);
                        });
                }
            });
    
            // Apply filter button click event
            applyFilterButton.addEventListener('click', function() {
                const selectedProgram = programFilter.value;
                const selectedCourse = courseFilter.value;
    
                // Clear existing events from the calendar
                calendar.removeAllEvents(); 
    
                // Example: Fetch events based on selected filters (you'll need to implement this logic)
                if (selectedProgram && selectedCourse) {
                    // Here you would typically fetch the events from the server
                    calendar.addEvent({ title: 'Example Event', start: '2024-10-20', end: '2024-10-22' }); // Example event
                }
    
                calendar.render(); // Re-render the calendar
            });
        });
    </script>
    
</body>
</html>
