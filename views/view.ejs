<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Booking Calendar</title>
    <!-- FullCalendar CSS -->
    <link href='https://cdn.jsdelivr.net/npm/fullcalendar@latest/main.min.css' rel='stylesheet' />
    <style>
        .container {
            display: flex;
        }

        .sidebar {
            width: 300px;
            padding: 20px;
            background-color: #f4f4f4;
        }

        #calendar {
            flex-grow: 1;
            max-width: 800px;
            margin-left: 20px;
        }
    </style>
</head>

<body>
    <!-- Top Bar -->
    <%- include('partials/top_bar') %>
    <!-- Sidebar -->
    <%- include('partials/side_bar') %>

    <main class="main-content">
        <div class="container">
            <!-- Sidebar for filters -->
            <div class="sidebar">
                <h3>Filter by Program</h3>
                <select id="programFilter">
                    <option value="">Select Program</option>
                    <% programs.forEach(function(program) { %>
                        <option value="<%= program.program_id %>"><%= program.program_name %></option>
                    <% }) %>
                </select>

                <h3>Filter by Course</h3>
                <select id="courseFilter">
                    <option value="">Select Course</option>
                    <% courses.forEach(function(course) { %>
                        <option value="<%= course.course_id %>"><%= course.course_name %></option>
                    <% }) %>
                </select>

                <button id="applyFilter">Apply Filter</button>
            </div>

            <!-- Calendar container -->
            <div id='calendar'></div>
        </div>
    </main>

    <!-- FullCalendar JS -->
    <script src='https://cdn.jsdelivr.net/npm/fullcalendar@latest/main.min.js'></script>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const programFilter = document.getElementById('programFilter');
            const courseFilter = document.getElementById('courseFilter');
            const applyFilterButton = document.getElementById('applyFilter');
            const calendarEl = document.getElementById('calendar');

            // Initialize FullCalendar
            var calendar = new FullCalendar.Calendar(calendarEl, {
                initialView: 'dayGridMonth',
                headerToolbar: {
                    left: 'prev,next today',
                    center: 'title',
                    right: 'dayGridMonth,timeGridWeek,timeGridDay'
                },
                events: [] // Initial empty events, populated by the filter
            });
            calendar.render();

            // Function to fetch bookings and display on the calendar
            async function fetchAndDisplayBookings(programId, courseId) {
    try {
        const response = await fetch(`/api/bookings?programId=${programId}&courseId=${courseId}`);
        const bookings = await response.json();

        // Ensure bookings is an array
        if (!Array.isArray(bookings)) {
            console.error('Expected bookings to be an array:', bookings);
            return;
        }

        // Clear current events from the calendar
        calendar.removeAllEvents();

        // Add bookings as events on the calendar
        const events = bookings.map(booking => ({
            title: `Room: ${booking.room_id} | Course: ${booking.course_id}`,
            start: booking.start_time,
            end: booking.end_time,
            backgroundColor: 'blue'
        }));

        calendar.addEventSource(events);
    } catch (error) {
        console.error('Error fetching bookings:', error);
    }
}


            // Initial fetch of all bookings
            fetchAndDisplayBookings('', '');

            // Populate course options based on selected program
            programFilter.addEventListener('change', function() {
                const selectedProgram = programFilter.value;
                courseFilter.innerHTML = '<option value="">Select Course</option>';

                if (selectedProgram) {
                    fetch(`/api/courses/${selectedProgram}`)
                        .then(response => response.json())
                        .then(courses => {
                            courses.forEach(function(course) {
                                const option = document.createElement('option');
                                option.value = course.course_id;
                                option.textContent = course.course_name;
                                courseFilter.appendChild(option);
                            });
                        })
                        .catch(error => {
                            console.error('Failed to fetch courses:', error);
                        });
                }
            });

            // Apply filter button click event
            applyFilterButton.addEventListener('click', function() {
                const selectedProgram = programFilter.value;
                const selectedCourse = courseFilter.value;

                fetchAndDisplayBookings(selectedProgram, selectedCourse);
            });

            // Automatically refresh bookings every minute
            setInterval(() => {
                const selectedProgram = programFilter.value;
                const selectedCourse = courseFilter.value;
                fetchAndDisplayBookings(selectedProgram, selectedCourse);
            }, 60000); // Refresh every 60 seconds (60000 milliseconds)
        });
    </script>
</body>
</html>
