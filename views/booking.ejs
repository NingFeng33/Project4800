<!DOCTYPE html>
<html>
  <head>
    <title>Room Booking</title>
  </head>
  <body>
    <link rel="stylesheet" href="/css/booking.css" />
    <!-- Link to an external CSS for styling -->
    <!-- Top Bar -->
    <%- include('partials/top_bar') %>
    <!-- Sidebar -->
    <%- include('partials/side_bar') %>

    <main class="main-content">
      <div class="booking-container">
        <h1>Room Booking for Courses</h1>
        <form id="bookingForm">
          <div class="form-row">
            <label for="programSelector">Select Program:</label>
            <select id="programSelector" name="program">
              <option value="">Select a Program</option>
            </select>
          </div>
          <div class="form-row">
            <label for="courseSelector">Select Course:</label>
            <select id="courseSelector" name="course">
              <option value="">Select a Course</option>
              <!-- Options will be populated based on selected program -->
            </select>
          </div>
          <div class="form-row">
            <label for="dateInput">Select Start Date:</label>
            <input type="date" id="dateInput" name="date" />
            <label for="startTimeInput">Select Start Time:</label>
            <input type="time" id="startTimeInput" name="startTime" />
          </div>
          <div class="form-row">
            <label for="endDate">Select End Date:</label>
            <input type="date" id="endDateInput" name="endDate" />
            <label for="endTimeInput">Select End Time:</label>
            <input type="time" id="endTimeInput" name="endTime" />
          </div>
          <button type="button" id="checkAvailabilityButton">
            Check Availability
          </button>
        </form>

        <table id="availableRooms">
          <thead>
            <tr>
              <th>Room Number</th>
              <th>Capacity</th>
              <th>Select</th>
            </tr>
          </thead>
          <tbody>
            <!-- Rooms will be populated here via JavaScript -->
          </tbody>
        </table>
      </div>
    </main>

    <script src="/scripts/booking.js"></script>
    <script src="/socket.io/socket.io.js"></script>
    <script src="/scripts/socket.js"></script>
  </body>
</html>
